/* --------------------- QGroupBox ------------------ */
QGroupBox {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #3b3b3b, stop: 1 #2b2b2b);
    border: 1px solid gray;
    border-radius: 5px;
    padding: 10px;
    margin-top: 3ex;
    color: #ffffff;
}

/* --------------------- QTextEdit ------------------ */
QTextEdit {
    background-color: #2b2b2b;
    border: 1px solid #444444;
    border-radius: 6px;
    padding: 4px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 13px;
    color: #ffffff;
}

QTextEdit:focus {
    border: 1px solid #00baff;
    background-color: #333333;
}

QTextEdit[readOnly="true"] {
    background-color: #3b3b3b;
    color: #808080;
    border: 1px solid #555555;
}

/* --------------------- QPlainTextEdit ------------------ */
QPlainTextEdit {
    background-color: #2b2b2b;
    border: 1px solid #444444;
    border-radius: 6px;
    padding: 4px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #ffffff;
}

QPlainTextEdit:focus {
    border: 1px solid #00baff;
    background-color: #333333;
}

QPlainTextEdit[readOnly="true"] {
    background-color: #3b3b3b;
    color: #808080;
    border: 1px solid #555555;
}

/* --------------------- QScrollArea ------------------ */
QScrollArea {
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    background-color: #2b2b2b;
    color: #ffffff;
    padding: 4px;
}
QScrollArea QScrollBar:vertical {
    border: none;
    background-color: #2b2b2b;
    width: 10px;
    margin: 0px;
}
QScrollArea QScrollBar::handle:vertical {
    background-color: #3b3b3b;
    border-radius: 5px;
}
QScrollArea QScrollBar::add-line:vertical, QScrollArea QScrollBar::sub-line:vertical {
    background: none;
}
QScrollArea QScrollBar:horizontal {
    border: none;
    background-color: #2b2b2b;
    height: 10px;
    margin: 0px;
}
QScrollArea QScrollBar::handle:horizontal {
    background-color: #3b3b3b;
    border-radius: 5px;
}
QScrollArea QScrollBar::add-line:horizontal, QScrollArea QScrollBar::sub-line:horizontal {
    background: none;
}

/* --------------------- QCommandLinkButton ------------------ */
QCommandLinkButton {
    border: none;
    border-radius: 8px;
    background-color: #2b2b2b;
    color: #00baff;
    font-size: 13px;
    padding: 4px 10px;
    text-align: left;
}
QCommandLinkButton:hover {
    background-color: #3b3b3b;
}
QCommandLinkButton:pressed {
    background-color: #4b4b4b;
    color: #ffffff;
}

/* -------------------------- QCheckBox ---------------------- */
QCheckBox {
    color: white;
    spacing: 5px;
}
QCheckBox::focus {
    border: 1px solid #00baff;
    border-radius: 4px;
}
QCheckBox::indicator {
    width: 14px;
    height: 14px;
    border-radius: 3px;
    background-color: #2b2b2b; /* Fundal gri-închis */
    border: 1px solid #666;
}

QCheckBox::indicator:hover {
    background-color: #3b3b3b; /* Gri mediu la hover */
    border: 1px solid #888;
}

QCheckBox::indicator:checked {
    background-color: #2b2b2b; /* Fundal rămâne gri-închis */
    border: 1px solid #aaa;
    image: url(:/img/check-mark.png); /* Imagine albă pentru bifă */
}

QCheckBox::indicator:checked:hover {
    background-color: #3b3b3b; /* Gri puțin mai deschis la hover */
}

QCheckBox::indicator:unchecked:hover {
    background-color: #3b3b3b;
}
