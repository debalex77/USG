/* --------------------- QPushButton --------------------- */
QPushButton {
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    background-color: #2b2b2b;
    color: #ffffff;
    font-size: 13px;
    padding: 4px 10px;
}
QPushButton:hover {
    background-color: #3b3b3b;
}
QPushButton:pressed {
    background-color: #4b4b4b;
}

/* --------------------- QLineEdit --------------------- */
QLineEdit {
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    color: #ffffff;
    font-size: 13px;
    background-color: #2b2b2b;
    padding: 4px 10px;
}
QLineEdit::focus {
    border: 1px solid #00baff;
    border-radius: 4px;
}
QLineEdit:!enabled {
    border: 1px inset gray;
    border-radius: 4px;
    background-color: #3b3b3b;
    color: #808080;
}

/* --------------------- QComboBox --------------------- */
QComboBox {
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 5px;
    padding: 4px 8px;
    color: #ffffff;
    font-size: 13px;
    background-color: #2b2b2b;
}
QComboBox:hover {
    border-color: rgba(255, 255, 255, 0.4);
}
QComboBox:focus {
    border-color: #00baff;
}
QComboBox::drop-down {
    border-left: 1px solid rgba(255, 255, 255, 0.2);
    width: 20px;
    background-color: #3b3b3b;
}
QComboBox::down-arrow {
    image: url(://img/down-chevron.png);
    width: 12px;
    height: 12px;
}
QComboBox QAbstractItemView {
    border: 1px solid rgba(255, 255, 255, 0.2);
    selection-background-color: #00baff;
    selection-color: #ffffff;
    background-color: #2b2b2b;
    color: #ffffff;
    outline: none;
}
QComboBox QAbstractItemView::item {
    padding: 4px 8px;
    border: none;
}
QComboBox QAbstractItemView::item:selected {
    background-color: #00baff;
    color: #ffffff;
}

